generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(cuid())
  email         String         @unique
  name          String?
  image         String?
  role          String         @default("user")
  credits       Int            @default(200)
  xp            Int            @default(0)
  tier          String         @default("free") // free, pro, enterprise
  referralCode  String?        @unique
  referredBy    String?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  personas      Persona[]
  conversations Conversation[]
  badges        Badge[]
  creditLedger  CreditLedger[]
  accounts      Account[]
  sessions      Session[]
  subscriptions Subscription[]
  purchases     Purchase[]
  referrals     Referral[]     @relation("Referrer")
  referredUsers Referral[]     @relation("Referred")
  creatorProfile CreatorProfile?
  payouts       Payout[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Persona {
  id           String   @id @default(cuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  name         String
  systemPrompt String   @db.Text
  config       Json     @default("{}")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Conversation {
  id        String     @id @default(cuid())
  userId    String
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  personaId String?
  title     String?
  mood      String?
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  messages  Message[]
  artifacts Artifact[]
  stats     Json?
}

model Message {
  id             String       @id @default(cuid())
  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  role           String
  name           String?
  content        String       @db.Text
  tokensIn       Int          @default(0)
  tokensOut      Int          @default(0)
  createdAt      DateTime     @default(now())
}

model Artifact {
  id             String       @id @default(cuid())
  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  type           String
  content        String?      @db.Text
  fileKey        String?
  meta           Json?
  createdAt      DateTime     @default(now())
}

model CreditLedger {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  delta     Int
  reason    String
  meta      Json?
  createdAt DateTime @default(now())
}

model Badge {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  slug      String
  createdAt DateTime @default(now())

  @@unique([userId, slug])
}

model Subscription {
  id                String   @id @default(cuid())
  userId            String
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  tier              String   // pro, enterprise
  status            String   // active, canceled, expired
  stripeCustomerId  String?
  stripeSubscriptionId String?
  currentPeriodStart DateTime
  currentPeriodEnd   DateTime
  cancelAtPeriodEnd  Boolean @default(false)
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  @@index([userId, status])
}

model MarketplaceAgent {
  id          String     @id @default(cuid())
  creatorId   String
  name        String
  description String     @db.Text
  category    String     // governance, creativity, health, education, etc.
  avatar      String?
  price       Int        // in credits
  featured    Boolean    @default(false)
  verified    Boolean    @default(false)
  trending    Boolean    @default(false)
  config      Json       // persona configuration
  stats       Json?      // downloads, ratings, etc.
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  purchases   Purchase[]

  @@index([category, featured])
  @@index([trending])
}

model Purchase {
  id          String           @id @default(cuid())
  userId      String
  user        User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  type        String           // agent, credits
  agentId     String?
  agent       MarketplaceAgent? @relation(fields: [agentId], references: [id])
  amount      Int              // credits spent or purchased
  status      String           // completed, pending, refunded
  stripePaymentIntentId String?
  meta        Json?
  createdAt   DateTime         @default(now())

  @@index([userId, type])
  @@index([status])
}

model Referral {
  id          String   @id @default(cuid())
  referrerId  String
  referrer    User     @relation("Referrer", fields: [referrerId], references: [id], onDelete: Cascade)
  referredId  String?
  referred    User?    @relation("Referred", fields: [referredId], references: [id])
  code        String   @unique
  clicks      Int      @default(0)
  signups     Int      @default(0)
  earnings    Int      @default(0) // in credits
  status      String   @default("active") // active, inactive
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([referrerId])
  @@index([code])
}

model CreatorProfile {
  id          String   @id @default(cuid())
  userId      String   @unique
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  displayName String
  bio         String?  @db.Text
  website     String?
  verified    Boolean  @default(false)
  totalSales  Int      @default(0)
  totalEarnings Int    @default(0) // in credits
  commissionRate Float @default(0.8) // 80% to creator
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Payout {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  amount      Int      // in credits or USD cents
  currency    String   @default("credits")
  status      String   // pending, completed, failed
  method      String?  // stripe, paypal, credits
  meta        Json?
  createdAt   DateTime @default(now())
  processedAt DateTime?

  @@index([userId, status])
}

model GovernanceLog {
  id          String   @id @default(cuid())
  userId      String
  action      String   // policy_created, audit_run, compliance_check
  resource    String   // universe_id, agent_id, etc.
  policy      String?  // GDPR, HIPAA, SOC2
  status      String   // pass, fail, warning
  details     Json?
  createdAt   DateTime @default(now())

  @@index([userId, action])
  @@index([createdAt])
}

model InsightReport {
  id          String   @id @default(cuid())
  userId      String
  type        String   // engagement, reach, accuracy
  format      String   // csv, pdf
  dateRange   Json     // {start, end}
  data        Json?
  status      String   // generating, completed, failed
  fileKey     String?
  createdAt   DateTime @default(now())
  completedAt DateTime?

  @@index([userId, status])
}
